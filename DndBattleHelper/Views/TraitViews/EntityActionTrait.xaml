<UserControl x:Class="DndBattleHelper.Views.TraitViews.EntityActionTrait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndBattleHelper.Views.TraitViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Stretch" TextWrapping="Wrap">
            <Run FontWeight="Bold" Style="{StaticResource ActionName}" Text="{Binding Name}"/>
            <Run Text="{Binding Description}"/>
        </TextBlock>
    </Grid>
</UserControl>
