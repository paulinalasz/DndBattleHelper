<UserControl x:Class="DndBattleHelper.Views.Editable.EditableTraitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndBattleHelper.Views.Editable"
             xmlns:vm="clr-namespace:DndBattleHelper.ViewModels.Editable"
             xmlns:parent="clr-namespace:DndBattleHelper.Views"
             xmlns:converters="clr-namespace:DndBattleHelper.Views.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="editableTraitView">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
        <DataTemplate DataType="{x:Type vm:EditableActionViewModel}">
            <StackPanel Orientation="Horizontal">
                <parent:AbilityView/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EditableAbilityViewModel}">
            <StackPanel Orientation="Horizontal">
                <parent:AbilityView/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EditableDamageRollViewModel}">
            <StackPanel Orientation="Horizontal">
                <parent:DamageRollView/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EditableTraitViewModel}">
            <StackPanel Orientation="Horizontal">
                <parent:TraitView/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentPresenter Content="{Binding}" />
        <Button Grid.Column="2" Content="X" Command="{Binding RemoveCommand}" Visibility="{Binding DataContext.IsRemoveVisible, Converter={StaticResource BoolToVisConverter}, ElementName=editableTraitView}"/>
    </Grid>
</UserControl>
