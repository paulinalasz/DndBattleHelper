<Window x:Class="DndBattleHelper.Views.AddNewEnemyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndBattleHelper.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="500" Width="850" MinWidth="850" MinHeight="500">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox Width="300"
                    ItemsSource="{Binding EnemyPresets}" 
                    DisplayMemberPath="Name" 
                    SelectedItem="{Binding SelectedEnemyPreset, Mode=TwoWay}" />
                <Button Content="Use Preset" Command="{Binding UsePresetCommand}"/>
            </StackPanel>
            <local:NewEnemyView/>
        </StackPanel>
    </Grid>
</Window>
